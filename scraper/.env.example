# SAQ Sommelier - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED
# ============================================================================
ENVIRONMENT=development  # development, staging, or production

# Database Configuration
DB_USER=saq_sommelier
DB_PASSWORD=saq_sommelier
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saq_sommelier

# Optional: Override with full DATABASE_URL if needed
# DATABASE_URL=postgresql+asyncpg://user:pass@host:port/dbname

# ============================================================================
# OPTIONAL: Debug / Logging
# ============================================================================
DATABASE_ECHO=false  # Log SQL queries (true for debugging)
DEBUG=true          # Enable debug mode
LOG_LEVEL=INFO      # DEBUG, INFO, WARNING, ERROR, CRITICAL
